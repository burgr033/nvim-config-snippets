{
  "neoconf-latex-windows": {
    "prefix": "neoconf-latex-windows",
    "body": [
      "{",
      "  \"lspconfig\": {",
      "    \"ltex\": {",
      "      \"ltex.language\": \"en-GB\"",
      "    },",
      "    \"texlab\": {",
      "      \"texlab\": {",
      "        \"forwardSearch\": {",
      "          \"executable\": \"sumatrapdf.exe\",",
      "          \"args\": [",
      "            \"-reuse-instance\",",
      "            \"%p\",",
      "            \"-forward-search\",",
      "            \"%f\",",
      "            \"%l\"",
      "          ]",
      "        },",
      "        \"chktex\": {",
      "          \"onEdit\": true",
      "        },",
      "        \"build\": {",
      "          \"onSave\": true,",
      "          \"forwardSearchAfter\": true",
      "        }",
      "      }",
      "    }",
      "  }",
      "}",
      "$0"
    ],
    "description": "Neoconf configuration for LaTeX with SumatraPDF on Windows"
  }
}
